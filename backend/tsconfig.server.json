{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./", // Output directly in the root directory
    "rootDir": "./", // Root directory for TypeScript files
    "moduleResolution": "node"
  },
  "include": ["server.ts"], // Ensure this path is correct
  "exclude": ["node_modules"] // Exclude node_modules but not the source files
}
